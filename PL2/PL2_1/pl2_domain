(defdomain pl2_domain(

    (:operator (!coger-caja ?u ?d ?b ?c ?con)
        (
            (ubicacion ?u) (dron ?d) (brazo ?b) (caja ?c) (contenido ?con)
            (brazo-dron ?d ?b)
            (ubicacion-dron ?d ?u)
            (ubicacion-caja ?c ?u)
            (contenido-caja ?con ?c)
            (free-brazo ?d ?b)
        )
        (
            (free-brazo ?d ?b)
            (ubicacion-caja ?c ?u)
        )
        (
            (brazo-ocupado ?d ?b ?c ?con)
        )
    )


    (:operator (!volar ?d ?origen ?destino)
        (
            (dron ?d) (ubicacion ?origen) (ubicacion ?destino)
            (ubicacion-dron ?d ?origen)
        )
        (
            (ubicacion-dron ?d ?origen)
        )
        (
            (ubicacion-dron ?d ?destino)
        )
    )

    (:operator (!entregar-caja ?u ?d ?b ?c ?con ?h)
        (
            (ubicacion ?u) (dron ?d) (brazo ?b) (caja ?c) (contenido ?con) (humano ?h)
            (humano-necesita ?h ?con)
            (ubicacion-dron ?d ?u)
            (ubicacion-humano ?h ?u)
            (contenido-caja ?con ?c)
            (brazo-ocupado ?d ?b ?c ?con)
        )
        (
            (brazo-ocupado ?d ?b ?c ?con)
            (humano-necesita ?h ?con)
        )
        (
            (free-brazo ?d ?b)
            (ubicacion-caja ?c ?u)
        )
    )
    
    (:method (enviar-todo ?h ?con)
    (
        (humano-necesita ?h ?con)

    )
    (
        (!coger-caja ?u ?d ?b ?c ?con)
        (!volar ?d ?origen ?destino)
        (!entregar-caja ?destino ?d ?b ?c ?con ?h)
        (!volar ?d ?origen ?destino)
        
    )

    )
    
)

);final defdomain
